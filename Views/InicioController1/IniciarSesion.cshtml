
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        Iniciar Sesion
                    </div>

                    <div class="card-body">
                        <form asp-controller="InicioController1" asp-action="IniciarSesion" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                            @* </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                //form - group
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            } *@
                            ¿No posees una cuenta? <a href="@Url.Action("Registrarse","InicioController1")">Registrate</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> 


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
        @if (ViewData["Mensaje"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: '@ViewData["Mensaje"]',
                    footer: '<a href="">Why do I have this issue?</a>'
                });
            </script>
        }
                            
        
    
</body>
</html>
